        name       = field0
        alias      = uid
        title      = Receipt (Beleg) UID
        type       = string
        byteofs    = 0
        max        = 48
        default    = NBjmYNKsPLahmXa5edjfje
	edit       = 1
    </field>
    <field>
        name       = field1
        alias      = url
        title      = Receipt (Beleg) URL
        type       = string
        byteofs    = 48
        max        = 48
        default    = https://demo.obono.at
	edit       = 2
    </field>
</table>

